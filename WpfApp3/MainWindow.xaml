<Window x:Class="WpfApp3.MainWindow"
        MaxWidth="750"
        MaxHeight="430"
        MinWidth="735"
        MinHeight="418"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="420" Width="740" Closing="Window_Closing" Initialized="Window_Initialized" Background="White">
    <Window.Resources>
        <Style x:Key="ContinentStyle" TargetType="Button">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="3"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" 
                            BorderThickness="1"
                            BorderBrush="Transparent" 
                            CornerRadius="30" 
                            Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="FontSize" Value="18"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ContinentImageStyle" TargetType="Image">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="ResourceBtn" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="Margin" Value ="15,5,15,5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        <Image x:Key="Plus" Source="resources/add.png"/>
    </Window.Resources>
    <DockPanel HorizontalAlignment="Stretch" LastChildFill="True" VerticalAlignment="Stretch" Margin="0,0,0,-2">
        <DockPanel LastChildFill="True" VerticalAlignment="Stretch" Width="95" HorizontalAlignment="Left">
            <DockPanel DockPanel.Dock="Top" Height="70" LastChildFill="True" VerticalAlignment="Top" Margin="0,0,0.2,0">
                <Button BorderBrush="{x:Null}" Content="MENI" DockPanel.Dock="Left" FontSize="20" FontWeight="Bold" Click="Button_Meni"/>
                <!--Button BorderBrush="{x:Null}" Content="Table" Click="OpenTable" DockPanel.Dock="Right"/>
                <Button BorderBrush="{x:Null}" Content="Meni" Click="Button_Click" DockPanel.Dock="Right"/>
                <Button BorderBrush="{x:Null}" Content="TYPE" Click="OpenNewType" DockPanel.Dock="Right"/-->
            </DockPanel>
            <ScrollViewer Background="DarkGray" VerticalAlignment="Stretch" BorderThickness="0">
                <WrapPanel DockPanel.Dock="Top" Orientation="Vertical" VerticalAlignment="Stretch" Name="ResourcePanel">
                </WrapPanel>
            </ScrollViewer>
        </DockPanel>

        <DockPanel Background="White">
            <Grid x:Name="WorldGrid">
                <Image Source="resources/world.png" VerticalAlignment="Stretch" HorizontalAlignment="Center"/>
                <Button Content="    Afrika" Style="{StaticResource ResourceKey=ContinentStyle}" Margin="259,172,274.6,190" Click="Button_Africa"/>
                <Button Content="   Evropa" Style="{StaticResource ResourceKey=ContinentStyle}" Margin="273,93,260.6,269"  Click="Button_Europe"/>
                <Button Content=" S. Amerika" Style="{StaticResource ResourceKey=ContinentStyle}" Margin="46,93,487.6,269"  Click="Button_N_America"/>
                <Button Content="  J. Amerika" Style="{StaticResource ResourceKey=ContinentStyle}" Margin="112,230,421.6,132"  Click="Button_S_America"/>
                <Button Content=" Australija" Style="{StaticResource ResourceKey=ContinentStyle}" Margin="507,266,26.6,96"  Click="Button_Oceania"/>
                <Button Content="  Azija" Style="{StaticResource ResourceKey=ContinentStyle}" Margin="419,105,114.6,257"  Click="Button_Asia"/>
                <TextBox HorizontalAlignment="Left" Height="23" Margin="63,359,0,0" Text="{Binding Path=Test1, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" VerticalAlignment="Top" Width="494"/>
            </Grid>
            <Grid x:Name="AfricaGrid" Visibility="Collapsed" DockPanel.Dock="Top">
                <Image Source="resources/africa.png" Style="{StaticResource ResourceKey=ContinentImageStyle}"/>
                <Button Content="BACK" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Back"/>
            </Grid>
            <Grid x:Name="EuropeGrid" Visibility="Collapsed" DockPanel.Dock="Top">
                <Image Source="resources/europe.png" Style="{StaticResource ResourceKey=ContinentImageStyle}"/>
                <Button Content="BACK" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Back"/>
            </Grid>
            <Grid x:Name="NAmericaGrid" Visibility="Collapsed" DockPanel.Dock="Top">
                <Image Source="resources/north_america.png" Style="{StaticResource ResourceKey=ContinentImageStyle}"/>
                <Button Content="BACK" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Back"/>
            </Grid>
            <Grid x:Name="SAmericaGrid" Visibility="Collapsed" DockPanel.Dock="Top">
                <Image Source="resources/south_america.png" Style="{StaticResource ResourceKey=ContinentImageStyle}"/>
                <Button Content="BACK" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Back"/>
            </Grid>
            <Grid x:Name="AsiaGrid" Visibility="Collapsed" DockPanel.Dock="Top">
                <Image Source="resources/asia.png" Style="{StaticResource ResourceKey=ContinentImageStyle}"/>
                <Button Content="BACK" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Back"/>
            </Grid>
            <Grid x:Name="OceaniaGrid" Visibility="Collapsed" DockPanel.Dock="Top">
                <Image Source="resources/oceania.png" Style="{StaticResource ResourceKey=ContinentImageStyle}"/>
                <Button Content="BACK" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Back"/>
            </Grid>
        </DockPanel>
    </DockPanel>
</Window>
